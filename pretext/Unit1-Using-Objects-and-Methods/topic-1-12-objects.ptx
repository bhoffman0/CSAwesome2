        int numTurn = countOccurences(code, ".turn");

        boolean passed = numTurn &gt;= 5;

        passed =
                getResults("5 or more", "" + numTurn, "Calls to turnRight() or turnLeft()", passed);
        assertTrue(passed);
    }
}
