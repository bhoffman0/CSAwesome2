                        + "  }\n"
                        + "}\n";
        boolean passed = codeChanged(orig);
        assertTrue(passed);
    }

    @Test
    public void test2()
    {
        String code = getCode();
        int numForward = countOccurences(code, "forward(");

        boolean passed = numForward &gt;= 7;

        passed = getResults("7 or more", "" + numForward, "Calls to forward()", passed);
        assertTrue(passed);
    }

    @Test
    public void test3()
    {
